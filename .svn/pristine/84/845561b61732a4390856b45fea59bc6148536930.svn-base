@CHARSET "UTF-8";

input[type=text],select,input[type=password] {
	height: 30px;
}

.row {
	margin-top: 10px;
	margin-bottom: 10px;
}

.row:BEFORE,.row:AFTER {
	clear: both;
}

#footer {
	position: relative;
}

#header {
	width: 100%;
	height: 50px;
}

#sidebar {
	width: 200px;
	height: 100%;
	float: left;
	margin: 3px;
	border: 1px medium gray;
}

#body {
	width: 80%;
	height: 100%;
	float: left;
}

#sidebar:AFTER {
	clear: both;
}

#sidebar li,ul,ol {
	list-style-type: none;
}

.bs-sidenav {
	border: 1px dotted gray;
}

#content {
	max-width: 1050px;
	width: 80%;
	margin: auto;
}

.borderit {
	border-bottom: 1px solid #E3E3E3;
	border-top:1px solid #E3E3E3;
	border-left:1px solid #E3E3E3;
	border-right:1px solid #E3E3E3;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
}